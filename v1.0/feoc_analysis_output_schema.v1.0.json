{
  "$defs": {
    "authority": {
      "additionalProperties": false,
      "properties": {
        "canonical_url": {
          "minLength": 1,
          "type": "string"
        },
        "citation": {
          "type": "string"
        },
        "name": {
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "name",
        "canonical_url"
      ],
      "type": "object"
    },
    "finding": {
      "additionalProperties": true,
      "properties": {
        "AUTHORITIES": {
          "items": {
            "$ref": "#/$defs/authority"
          },
          "type": "array"
        },
        "NORMALIZATION": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/$defs/normalization_assertion"
            }
          ],
          "description": "Optional explainability payload. Populate directly from control_hits[].normalization."
        },
        "clause_excerpt": {
          "type": "string"
        },
        "clause_span_ids": {
          "description": "Optional but recommended when using normalization/evidence_map.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "control_id": {
          "minLength": 1,
          "type": "string"
        },
        "finding_id": {
          "minLength": 1,
          "type": "string"
        },
        "finding_type": {
          "minLength": 1,
          "type": "string"
        },
        "severity": {
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "finding_id",
        "finding_type",
        "control_id",
        "severity",
        "clause_excerpt"
      ],
      "type": "object"
    },
    "normalization_assertion": {
      "additionalProperties": false,
      "properties": {
        "actors": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "concept_id": {
          "description": "Optional: may be omitted if the finding already identifies the control_id/concept_id.",
          "type": "string"
        },
        "confidence": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "modality": {
          "enum": [
            "SHALL",
            "MUST",
            "MAY",
            "SHOULD",
            "REPRESENTS",
            "WARRANTS",
            "SILENT",
            "UNKNOWN"
          ],
          "type": "string"
        },
        "objects": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "polarity": {
          "enum": [
            "AFFIRMED",
            "NEGATED",
            "UNKNOWN"
          ],
          "type": "string"
        },
        "qualifiers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "confidence",
        "polarity",
        "modality",
        "actors",
        "objects",
        "qualifiers"
      ],
      "type": "object"
    }
  },
  "$id": "https://raw.githubusercontent.com/okapi222/feoc-redline-vectors/refs/heads/main/v1.1/feoc_analysis_output_schema.v1.0.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "document": {
      "additionalProperties": true,
      "type": "object"
    },
    "findings": {
      "items": {
        "$ref": "#/$defs/finding"
      },
      "type": "array"
    },
    "manifest_url": {
      "minLength": 1,
      "type": "string"
    },
    "schema_version": {
      "const": "v1.0",
      "type": "string"
    }
  },
  "required": [
    "manifest_url",
    "schema_version",
    "findings"
  ],
  "title": "FEOC Analysis Output Schema v1.0",
  "type": "object"
}
